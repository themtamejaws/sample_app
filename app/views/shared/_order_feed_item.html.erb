<li id="<%= order_feed_item.id %>">
<%= link_to gravatar_for(order_feed_item.user), order_feed_item.user %>
<span class="user">
 <%= link_to order_feed_item.user.name, order_feed_item.user %>
</span>
<span class="content"><%= order_feed_item.order_name %></span>                                                           
<span class="timestamp">
  Posted <%= time_ago_in_words(order_feed_item.created_at) %> ago.
</span>
<% if current_user?(order_feed_item.user) %>
  <%= link_to "delete", order_feed_item, method: :delete,
    data: { confirm: "You sure?" },
    title: order_feed_item.order_name %>
  <% end %>
  </li>
