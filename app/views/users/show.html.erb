<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
  <section>
  <h1>
    <%= gravatar_for @user %>
    <%= @user.name %>
  </h1>
  <%= @user.research_title %>
  </section>
  <hr>
  <%= @user.research_description %> 
  </aside>
  <div class="span8">
    <% if @user.microposts.any? %>
          <%= render 'follow_form' if signed_in? %>
      <h3>Posts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
    <% if @user.orders.any? %>
          <%= render 'follow_form' if signed_in? %>
      <h3>Outstanding Orders (<%= @user.orders.count %>)</h3>
      <ol class="orders">
        <%= render @orders %>
      </ol>
      <%= will_paginate @orders%>

    <% end %>
  </div>
</div>
