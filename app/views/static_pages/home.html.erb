<% if signed_in? %>
  <div class="row">
    <aside class="span4">
    <section>
    <%= render 'shared/user_info' %>
    </section>
    <section>
    <%= render 'shared/micropost_form' %>
    </section>
    </aside>
    <div class="span8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center hero-unit">
    <h1>Hunter Research Lab</h1>

    <h2>
      Biogenesis, Organisation and Function of Membranes <br> @ <a href="http://www.sheffield.ac.uk">The University of Sheffield</a>
    </h2>

    <%= link_to "Join!", signup_path, class: "btn btn-large btn-primary" %>
  </div>

  <div class="row span7 offset2">
    <div id="myCarousel" class="carousel slide">
      <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
      </ol>
      <!-- Carousel items -->
      <div class="carousel-inner">
        <div class="active item"> 
          <%= link_to image_tag("mg-chelatase.jpg", alt: "Model of a photosynthetic vesicle", size: "600x200"), 'http://www.shef.ac.uk/mbb/staff/hunter' %>
          <div class="carousel-caption">
            <p>The first step in chlorophyll biosynthesis involves the insertion of a magnesium ion into protoporphyrin...</p>
          </div>
        </div>
        <div class="item">  
          <%= link_to image_tag("PS1-LH1.jpg", alt: "Model of a photosynthetic vesicle", size: "600x200"), 'http://www.shef.ac.uk/mbb/staff/hunter' %>
          <div class="carousel-caption">
            <p> The V-shaped RC-LH1-PufX core dimer (A)... </p>
          </div>
        </div>
        <div class="item"> 
          <%= link_to image_tag("Rsp.jpg", alt: "Model of a photosynthetic vesicle", size: "600x200"), 'http://www.shef.ac.uk/mbb/staff/hunter' %>
          <div class="carousel-caption">
            <p>Left, cells of a photosynthetic bacterium...</p>
          </div>
        </div>
        <div class="item"> 
          <%= link_to image_tag("nanoarray.jpg", alt: "Model of a photosynthetic vesicle", size: "600x200"), 'http://www.shef.ac.uk/mbb/staff/hunter' %> 
          <div class="carousel-caption">
            <p> Left, atomic-level structural model of a complete photosynthetic membrane... </p>
          </div>
        </div>
      </div>
      <!-- Carousel nav -->
      <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
      <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
    </div>
  </div>
<% end %>
